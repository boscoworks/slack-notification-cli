<?xml version="1.0"?>
<ruleset name="PSR2.Slack-Notificator-Cli">
 <description>The Charlotte coding standard based on PSR2.</description>
 <arg name="tab-width" value="4"/>
 <rule ref="PSR2"> <!-- PSR2 を使用する -->
  <!-- "Each class must be in a namespace of at least one level" を抑止 -->
  <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
  <!-- "Class name <class_name> is not in camel caps" を抑止 -->
  <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
 </rule>
</ruleset>
